<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if (!user) { %>
      <form action="/login" method="POST">
        <div class="form-group mb-2">
          <button type="submit" value="login" class="btn btn-outline-secondary">Login</button>
        </div>
      </form>
      <form action="/register" method="POST">
        <div class="form-group mb-2">
          <button type="submit" value="register" class="btn btn-outline-secondary">Register</button>
        </div>
      </form>
      <% } else { %>
        <span>Welcome <%=user.email%>!</span>
        <form action="/logout"  method="POST">
          <button type="submit" class="btn btn-outline-secondary">Logout</button>
        </form>
        <% } %>
  </nav>
</header>